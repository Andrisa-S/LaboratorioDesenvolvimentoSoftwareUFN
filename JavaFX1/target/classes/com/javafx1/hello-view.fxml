<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javafx1.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 16pt; -fx-font-weight: bold;" text="Registro de Nome" />

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <columnConstraints>
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
        </columnConstraints>

        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtNome" promptText="Seu primeiro nome" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Sobrenome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtSobrenome" promptText="Seu sobrenome" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    </GridPane>

    <VBox alignment="CENTER" spacing="10.0">
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#onMostrarNome" text="Mostrar Nome Completo" style="-fx-font-weight: bold;" />
        </HBox>

        <Label fx:id="lblNome" style="-fx-font-size: 12pt; -fx-text-fill: #1a73e8;" text="Aguardando entrada..." />
    </VBox>
</VBox>